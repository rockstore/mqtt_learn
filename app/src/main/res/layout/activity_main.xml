<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/controll_panel"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent" >
        <Button
            android:id="@+id/connect"
            android:onClick="connect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="连接"
            android:gravity="center"/>
        <Button
            android:id="@+id/disconnect"
            android:onClick="disconnect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="断开"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/subscribe_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/controll_panel">
        <EditText
            android:id="@+id/subscribe_topic"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="12sp"
            android:hint="请输入待订阅的主题"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/subscribe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="subscribe"
            android:layout_height="match_parent"
            android:text="订阅"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/publish_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/subscribe_container">
        <EditText
            android:id="@+id/publish_topic"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:hint="请输入待发布的主题"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/publish_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:hint="请输入待发布的内容"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/publish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="publish"
            android:layout_height="match_parent"
            android:text="发布"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/publish_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/log_pannel"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</RelativeLayout>